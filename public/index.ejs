  <link rel="stylesheet" type="text/css" href="vendor/datatables.min.css" />
  <script src="vendor/datatables.min.js"></script>


</head>

<body>

<style media="screen">

  html,
  body {
    height: 100%;
    font-family: geforcenow;
     !important
  }

  li {
    list-style-type: none;
    display: inline;
  }

  img {
    width: 100px;
  }

  .navbar-dark .navbar-brand {
    font-family: 'geforce-bold' !important;
    color: white;
    text-transform: uppercase;
  }

  li.nav-item {
    text-transform: uppercase;
    font-family: geforce-bold;
  }

  td.sorting_1 {
    font-weight: 600;
  }

  .p-5 {
    padding: 0.5rem !important;
  }

  .bg-dark {
    background-color: #76b900 !important;
  }

  thead {
    text-transform: uppercase;
    color: #76b900 !important;
    font-family: geforce-bold;
  }

  tfoot {
    display: table-header-group;
  }

  /* Other Classes for Page Styling */

  @font-face {
    font-family: "geforcenow";
    src: url("fonts/geforce-light.ttf") format("truetype");
  }

  @font-face {
    font-family: "geforce-bold";
    src: url("fonts/geforce-bold.ttf") format("truetype");
  }

  .nav-pills .nav-link.active,
  .nav-pills .show>.nav-link {
    color: #fff;
    font-weight: bold;
    margin-left: 5px;
    text-transform: uppercase;
    background-color: #76b900;
  }

  .upcase {
    text-transform: uppercase;
  }
</style>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
    <a class="navbar-brand" href="/">GeForce NOW Games List</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link active" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/changelog">Changelog</a>
        </li>
    </div>
  </nav>

  <div class="card-body p-5">
    <h4>ALL GeForce NOW Games List</h4>
    <p>This list contains the latest live GeForce NOW Games.</p>
    <div class="table-responsive">
      <table id="gameslist" class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th>Title</th>
            <th>Publisher</th>
            <th>Genre</th>
            <th>Highlights Supported?</th>
            <th>Fully Optimised?</th>
            <th>Free?</th>
            <th>Library</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>title...</th>
            <th>publisher...</th>
            <th>genre...</th>
            <th>support...</th>
            <th>optimised...</th>
            <th>free?</th>
            <th>library..</th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <script type="text/javascript">
    $(document).ready(function() {
      $('#gameslist').DataTable({
        "ajax": "data.json",
        "searching": true,
        "ordering": true,
        "info": true,
        "blengthchange": true,
        "lengthChange": false,
        "paging": true,
        "pageLength": 50,
        "pagingType": "full_numbers",
        "dom": 'lrtip',
        "columns": [{
          "data": "title"
        }, {
          "data": "publisher"
        }, {
          "data": "genre"
        }, {
          "data": "hs"
        }, {
          "data": "fo"
        }, {
          "data": "ftp"
        }, {
          "data": "sl"
        }]
      });
      $('#gameslist tfoot th').each(function() {
        var title = $(this).text();
        $(this).html('<input type="text" placeholder="Search ' + title + '" />');
      });
      var table = $('#gameslist').DataTable();
      table.columns().every(function() {
        var that = this;
        $('input', this.footer()).on('keyup change clear', function() {
          if (that.search() !== this.value) {
            that.search(this.value).draw();
          }
        });
      });
    });
  </script>

</body>

</html>
