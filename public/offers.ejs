<!DOCTYPE html>
<html lang="en">

<head>

  <%- include("partials/head.ejs") %>

</head>

<body>

  <%- include("partials/header.ejs") %>  

  <div class="card-body p-5">
    <h4>STEAM OFFERS</h4>
    <p>LAST UPDATE 13 MAY 2022 IN EUR</p>
    <div class="table-responsive">
      <table id="gameslist" class="table table-striped table-bordered display responsive" style="width:100%">
        <thead>
          <tr>
            <th>Title</th>
            <!--<th>Id</th>-->
            <th>Link</th>
            <th>Initial</th>
            <th>Actual</th>
            <th>Discount</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <script type="text/javascript">
    $(document).ready(function() {
      $('#gameslist').DataTable({
        "ajax": "data/steamoffers-new.json",
        "responsive":true,
        "searching": true,
        "pageLength": 10,
        "columns": [{
          "data": "title"
        },/* {
          "data": "id"
        },*/ {
          "defaultContent": "buy",
          "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
            $(nTd).html("<a href='https://store.steampowered.com/app/"+oData.id+"'  target='_blank'>"+/*oData.title*/"Buy on Steam"+"</a>");
          }
        },{
          "data": "initial"
        }, {
          "data": "final"
        }, {
          "data": "discount"
        }]
      });
    });
  </script>

  <script src="vendor/dark-mode-switch.min.js"></script>

  <%- include("partials/analytics.ejs") %>

</body>

</html>
