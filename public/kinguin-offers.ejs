  <% if (offers.length != 0) {%> <%- offers[0]["name"] %> <% } else { %> <p> no offers </p> <% } %>
    <div class="table-responsive">
      <table id="gameslist" class="table table-striped table-bordered display responsive" style="width:100%">
        <thead>
          <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <% offers.forEach((offer, index) => {%>
          <tr>
            <td><%= offer.name %></td>
            <td><%= offer.qty %></td>
            <td><%= offer.price %></td>
          </tr>
        <% }); %>
      </table>
    </div>
  </main>

  <script type="text/javascript">
    $(document).ready(function() {
      $('#gameslist').DataTable({
        "responsive":true,
        "searching": true,
